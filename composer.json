{
    "name": "hexide-digital/gitlab-deploy",
    "description": "Prepare your project to deploy",
    "license": "MIT",
    "keywords": [
        "hexide-digital",
        "laravel",
        "gitlab-deploy",
        "ci-cd",
        "deploy",
        "dev"
    ],
    "authors": [
        {
            "name": "Oleksandr-Moik",
            "email": "sashamoik2016@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/hexidedigital/laravel-gitlab-deploy",
    "require": {
        "php": "^8.1",
        "deployer/deployer": "^7.3",
        "graham-campbell/gitlab": "^7.0",
        "guzzlehttp/guzzle": "^7.4",
        "http-interop/http-factory-guzzle": "^1.0",
        "laravel/framework": "^9.0 || ^10.0",
        "spatie/laravel-package-tools": "^1.13.0",
        "symfony/console": "^6.0 || ^7.0",
        "symfony/process": "^6.0 || ^7.0",
        "symfony/yaml": "^6.1 || ^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14.0",
        "nunomaduro/collision": "^7.10",
        "nunomaduro/larastan": "^2.9.2",
        "orchestra/testbench": "^7.22.1 | ^8.21.1",
        "pestphp/pest": "^2.34.1",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan-deprecation-rules": "^1.1.4",
        "phpstan/phpstan-phpunit": "^1.3.16"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "HexideDigital\\GitlabDeploy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HexideDigital\\GitlabDeploy\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel": {
            "aliases": {
                "GitlabDeploy": "HexideDigital\\GitlabDeploy\\Facades\\GitlabDeploy"
            },
            "providers": [
                "HexideDigital\\GitlabDeploy\\GitlabDeployServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "lint": "vendor/bin/pint src tests",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    }
}
